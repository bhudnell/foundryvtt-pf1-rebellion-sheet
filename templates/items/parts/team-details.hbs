<div class="form-group">
  <label>{{localize "PF1.Type"}}</label>
  <div class="form-fields">
    <select class="sub-type" name="system.subType">
      {{selectOptions subTypeOptions selected=system.subType}}
    </select>
  </div>
</div>

<div class="form-group">
  <label>{{localize "PF1RS.Team"}}</label>
  <div class="form-fields">
    {{#if isUnique}}
    <span>{{ uniqueLabel }}</span>
    {{else}}
    <select name="system.baseType">
      {{selectOptions baseTypeOptions selected=system.baseType}}
    </select>
    {{/if}}
  </div>
</div>

<div class="form-group">
  <label>{{localize "PF1.Tier"}}</label>
  {{#if (or isCustom isUnique)}}
  <div class="form-fields">
    <input type="number" step="1" name="system.customTier" value="{{ system.tier }}" />
  </div>
  {{else}}
  <span>{{ system.tier }}</span>
  {{/if}}
</div>

<div class="form-group">
  <label>{{localize "PF1.Size"}}</label>
  {{#if (or isCustom isUnique)}}
  <div class="form-fields">
    <input type="number" step="1" name="system.customSize" value="{{ system.size }}" />
  </div>
  {{else}}
  <span>{{ system.size }}</span>
  {{/if}}
</div>

<div class="form-group">
  <label>{{localize "PF1RS.Manager"}}</label>
  <div class="form-fields">
    <select name="system.managerId">
      {{selectOptions validManagerOptions selected=system.managerId}}
    </select>
    <span class="manager-bonus">{{localize "PF1.Bonus"}} {{ system.bonus }}</span>
  </div>
</div>

<div class="form-group">
  <label>{{localize "PF1RS.GrantedActions"}}</label>
  <div class="form-fields">
    <ul class="traits-list tag-list">
      {{#each actions}}
      <li class="tag">{{ this }}</li>
      {{/each}}
    </ul>
    <a
      class="trait-selector action-selector {{#unless (or isCustom isUnique)}}disabled{{/unless}}"
      data-title="PF1RS.ActionSelector"
      data-options="rebellionActions"
      data-for="system.customActions"
      data-has-custom="false"
    >
      <i class="fas fa-pen-to-square"></i>
    </a>
  </div>
</div>
