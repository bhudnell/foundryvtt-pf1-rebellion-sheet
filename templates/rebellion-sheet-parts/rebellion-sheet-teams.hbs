<ol class="item-groups-list">
  {{#each teamSections}}
  <ol class="item-list">
    <li class="flexrow item-list-header">
      <span class="item-name">{{ label }}</span>
      <span class="item-detail item-type">{{localize "PF1RS.TeamType"}}</span>
      <span class="item-detail item-manager">{{localize "PF1RS.Manager"}}</span>
      <span class="item-detail item-size">{{localize "PF1RS.TeamSize"}}</span>
      <span class="item-detail item-bonus">{{localize "PF1RS.Bonus"}}</span>
      <span class="item-detail item-disabled">{{localize "PF1RS.Disabled"}}</span>
      <span class="item-detail item-missing">{{localize "PF1RS.Missing"}}</span>
      <div class="item-detail item-controls">
        <a
          class="item-control item-create"
          data-type="{{@root.teamType}}"
          data-subType="{{ subType }}"
          data-tooltip="PF1RS.CreateItem"
        >
          <i class="fa-solid fa-plus"></i>
        </a>
      </div>
    </li>
    {{#each teams}}
    <li class="flexrow item" data-id="{{ id }}">
      <div class="item-name">
        <div class="item-image" style="background-image: url('{{ img }}')"></div>
        <span>{{ name }}</span>
      </div>
      <span class="item-detail item-type">{{ typeLabel }}</span>
      <span class="item-detail item-manager">{{ system.managerName }}</span>
      <span class="item-detail item-size">{{ system.size }}</span>
      <span class="item-detail item-bonus">{{ system.bonus }}</span>
      <a class="item-detail item-disabled item-toggle-data" data-name="disabled">
        {{#if system.disabled}}
        <i class="fas fa-check"></i>
        {{else}}
        <i class="fas fa-times"></i>
        {{/if}}
      </a>
      <a class="item-detail item-missing item-toggle-data" data-name="missing">
        {{#if system.missing}}
        <i class="fas fa-check"></i>
        {{else}}
        <i class="fas fa-times"></i>
        {{/if}}
      </a>
      <div class="flexrow item-detail item-controls">
        <a class="item-control item-edit" data-tooltip="PF1RS.EditItem">
          <i class="fa-solid fa-pen-to-square"></i>
        </a>
        <a class="item-control item-delete" data-tooltip="PF1RS.DeleteItem">
          <i class="fa-solid fa-trash"></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
  {{/each}}
</ol>
<hr />
<footer>
  <div class="info-box-joined">
    <div class="info-box">
      <span class="label">{{localize "PF1RS.CurrTeams"}}</span>
      <span class="value">{{ teamCount.active }}</span>
    </div>
    <div class="info-box">
      <span class="label">{{localize "PF1RS.FromRank"}}</span>
      <span class="value">{{ teamCount.levels }}</span>
    </div>
    <div class="info-box">
      <span class="label">{{localize "PF1RS.FromBonus"}}</span>
      <span class="value">{{ teamCount.bonus }}</span>
    </div>
    <div class="info-box">
      <span class="label">{{localize "PF1RS.MaxTeams"}}</span>
      <span class="value">{{ teamCount.max }}</span>
    </div>
  </div>
</footer>
