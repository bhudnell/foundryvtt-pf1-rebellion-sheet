<div class="eventChance flex0">
  <div class="horizLabeledValue">
    <a class="rollable" data-tooltip="PF1RS.RollEvent">
      <i class="fa-solid fa-dice-d20"></i>
    </a>
    <div class="labeledValue">
      <span>{{ system.eventChance }} %</span>
      <span>{{localize "PF1RS.EventChance"}}</span>
    </div>
  </div>
  <span>=</span>
  <div class="labeledValue">
    <span>{{ system.notoriety }}</span>
    <span>{{localize "PF1RS.Notoriety"}}</span>
  </div>
  <span>+</span>
  <div class="labeledValue" data-tooltip-extended="danger">
    <span>{{ system.danger.total }}</span>
    <span>{{localize "PF1RS.Danger"}}</span>
  </div>
  <div class="labeledValue">
    <input type="checkbox" {{checked system.doubleEventChance}} name="system.doubleEventChance" />
    <label for="{{ id }}">x2</label>
  </div>
</div>

<ol class="item-groups-list">
  {{#each eventSections}}
  <ol class="item-list">
    <li class="flexrow item-list-header">
      <span class="item-name">{{ label }}</span>
      {{#if showFlags}}
      <span class="item-detail item-persistent">{{localize "PF1RS.Persistent"}}</span>
      <span class="item-detail item-mitigated">{{localize "PF1RS.Mitigated"}}</span>
      {{/if}}
      <div class="item-detail item-controls">
        <a
          class="item-control item-create"
          data-type="{{ @root.eventType }}"
          data-sub-type="{{ subType }}"
          data-tooltip="PF1RS.CreateItem"
        >
          <i class="fa-solid fa-plus"></i>
        </a>
      </div>
    </li>
    {{#each events}}
    <li class="flexrow item" data-id="{{ id }}">
      <div class="item-name expand-summary">
        <div class="item-image" style="background-image: url('{{ img }}')"></div>
        <span>{{ name }}</span>
      </div>

      {{#if ../showFlags}}
      <a class="item-detail item-persistent item-toggle-data" data-name="persistent">
        {{#if system.persistent}}
        <i class="fas fa-check"></i>
        {{else}}
        <i class="fas fa-times"></i>
        {{/if}}
      </a>
      <a class="item-detail item-mitigated item-toggle-data" data-name="mitigated">
        {{#if system.mitigated}}
        <i class="fas fa-check"></i>
        {{else}}
        <i class="fas fa-times"></i>
        {{/if}}
      </a>
      {{/if}}
      <div class="flexrow item-detail item-controls">
        <a class="item-control item-edit" data-tooltip="PF1RS.EditItem">
          <i class="fa-solid fa-pen-to-square"></i>
        </a>
        <a class="item-control item-delete" data-tooltip="PF1RS.DeleteItem">
          <i class="fa-solid fa-trash"></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
  {{/each}}
</ol>
